<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ChatContactsRecyclerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".chatFragments.ChatContactsFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/chatContactNoFriendsText"
        android:layout_width="196dp"
        android:layout_height="124dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Please go to Connections and add friends"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ChatContactsRecycler"
        app:layout_constraintEnd_toEndOf="@+id/ChatContactsRecycler"
        app:layout_constraintStart_toStartOf="@+id/ChatContactsRecycler"
        app:layout_constraintTop_toTopOf="@+id/ChatContactsRecycler" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ChatContactsRecycler"
        android:layout_width="match_parent"
        android:layout_height="492dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/chatCreateNewChatButton" />

    <Button
        android:id="@+id/chatCreateNewChatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/chat_create_new_chat_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>